{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": [
      "@webgpu/types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}